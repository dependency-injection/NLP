sentimental<-function(rlist,rword)
{
b1<-c()
flag<-0
last<-0
acnum<-array()
occurances<-0
for(counter in 1:length(rlist))
{
if(d[counter]==rword)
{
occurances<-occurances + 1
acnum[occurances]<-counter
}
}

for(counter2 in (acnum -1):1)
{
	if(flag==1)
	{
		break
	}
	else
	{
	lss<-paste(rlist[counter2],collapse="")
	lold<-strsplit(lss,split="")
	l<-unlist(lold)
	for(coun in 1:length(l))
	{
		if(l[coun]==".")
		{
			flag<-1
			break
		}
	}
	if(flag == 0)
	{
		b1<-c(b1,rlist[counter2])
	}
	}
}
b1<-rev(b1)
b1<-c(b1,rword)
flag2<-0
for(counter2 in (acnum +1):length(rlist))
{
	if(flag2==1)
	{
		break
	}
	else
	{
	lss<-paste(rlist[counter2],collapse="")
	lold<-strsplit(lss,split="")
	l<-unlist(lold)
	for(coun in 1:length(l))
	{
		if(l[coun]==".")
		{
			flag2<-1
			b1<-c(b1,rlist[counter2])
			break
		}
	}
	if(flag2 == 0)
	{
		b1<-c(b1,rlist[counter2])
		last<-counter2
	}
	}
}
b1<-unlist(b1)
strr<-paste(b1,collapse=" ")
result<-score.sentiment(strr, pos.words, neg.words)
}
			
	






