rlist<-list('wow.','you.','are','very','ugly','hello.') #remove
rword<-"ugly."  # remove
# start of variable initializations
fulls1<-list()
fulls2<-c()
pleaseskip<-0
lss<-c()
lold<-list()
l<-c()
b1<-c()
flag<-0
first<-1
last<-1
acnum<-array()
occurances<-0
strr<-""
# end of variable initializations
fulls1<-strsplit(rword,split="")
fulls2<-unlist(fulls1)
lastchar<-length(fulls2)
if(fulls2[lastchar]==".")
{
	pleaseskip<-1
}
for(counter in 1:length(rlist))
{
	if(rlist[counter]==rword || rlist[counter]==fullstop)
	{
		occurances<-occurances + 1
		acnum[occurances]<-counter
	}
}
for(occnum in 1:length(acnum))
{
	for(counter2 in (acnum[occnum] -1):1)
	{
		if(flag==1)
		{
			break
		}
		else
		{
			lss<-paste(rlist[counter2],collapse="")
			lold<-strsplit(lss,split="")
			l<-unlist(lold)
			for(coun in 1:length(l))
			{
				if(l[coun]==".")
				{
					flag<-1
					break
				}
			}
			if(flag == 0)
			{
				b1<-c(b1,rlist[counter2])
			}
		}
	}

	b1<-rev(b1)
	b1<-c(b1,rword)
	flag2<-0
	if(pleaseskip == 0)
	{
	for(counter2 in (acnum[occnum] +1):length(rlist))
	{
		
			if(flag2==1)
			{
				break
			}
			else
			{
				lss<-paste(rlist[counter2],collapse="")
				lold<-strsplit(lss,split="")
				l<-unlist(lold)
				for(coun in 1:length(l))
				{
					if(l[coun]==".")
					{
						flag2<-1
						b1<-c(b1,rlist[counter2])
						break
					}
				}
				if(flag2 == 0)
				{
					b1<-c(b1,rlist[counter2])
					last<-counter2
				}
			}
		
	}
	}
	b1<-unlist(b1)
	strr<-paste(b1,collapse=" ")
	result<-score.sentiment(strr, pos.words, neg.words)
} # occnum for

			
	






